package Assignment1;

public class Assignment1 {
	public static double areaOfSquare(double length) {
		return length*length;
	}
	
	public static double areaOfTriangle(double length, double height) {
		return 0.5*length*height;
	}
	
	public static void multiplyThree(int size) {
		for(int i=1; i<=size; i++) {
			int result = 3*i;
			System.out.println("3 x " + i + " = " + result);
			
		}
	}
	
	public static void main(String[] args) {
		double res1 = Assignment1.areaOfSquare(45.9);
		double res2 = Assignment1.areaOfTriangle(25, 1);
		
		System.out.println(res1);
		System.out.println(res2);
		
		Assignment1.multiplyThree(5);
	}

}
